<div class="row">
	<div class="span12 text-center">
		<h1><%= @topic.name %></h1>
	</div>
</div>
<div class="row">
	<div class="span12">
		<% @topic.bookmarks.desc.each do |bookmark| %>
			<div class="span3 down40">
				<div class="urlbox">
					<div class="text-center">
						<%= link_to bookmark.url, "http://#{bookmark.url}" %>
					</div>
				</div>
				<div class="text-center">
					<a href="#">Like</a>
				</div>
			</div>
		<% end %>
	</div>
</div>

