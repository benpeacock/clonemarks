<div class="row">
	<div class="span12 text-center">
		<h1>All Clonemarks</h1>
	</div>
</div>
<% @topics.each do |topic| %>
	<div class="row">
		<div class="span12">
			<h3><%= link_to topic.name, topic %></h3>
		</div>
		<div class="row">
			<div class="span12 down40">
				<% topic.bookmarks.each do |bookmark| %>
					<div class="span2">
						<%= link_to bookmark.url, bookmark %>
					</div>
				<% end %>
			</div>
		</div>
	</div>
<% end %>